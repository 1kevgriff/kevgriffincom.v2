<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <title>Kevin Griffin | Developer, Trainer, Entreprenuer</title>

    <!-- Mobile Meta -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Favicon -->
    <link rel="shortcut icon" href="images/favicon.ico">

{{> styles}}

</head>

<body class="no-trans front-page page-loader-4">

    <!-- scrollToTop -->
    <!-- ================ -->
    <div class="scrollToTop circle"><i class="icon-up-open-big"></i></div>

    <!-- page wrapper start -->
    <!-- ================ -->
    <div class="page-wrapper">

        {{> header}}

        <!-- main-container start -->
        <!-- ================ -->
        <section class="main-container">

            <div class="container">
                <div class="row">

                    <!-- main start -->
                    <!-- ================ -->
                    <div class="main col-md-8">

                        <!-- page-title start -->
                        <!-- ================ -->
                        <h1 class="page-title">Articles</h1>
                        <div class="separator-2"></div>
                        <!-- page-title end -->

                        {{#each (sortByKey site.categories.data 'name') as |cat|}}
                        <article class="blogpost">
                            <header>
                                <h2>{{cat.name}}</h2>
                            </header>
                            <ul>
                                {{#each (filterCategories @root.site.posts.data cat.name) as |post|}}
                                    <li><a href="{{url_for post.path}}">{{post.title}}</a></li>
                                {{/each}}
                            </ul>
                        </article>
                        {{/each}} {{!--{{#each site.posts.data as |post|}}
                        <article class="blogpost">
